<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true" >
    <php>
        <var name="dburi" value="pgsql:dbname=phergie_plugin_tell_test;host=localhost" />
        <var name="dbuser" value="postgres" />
        <var name="dbpass" value="" />
    </php>

    <testsuites>
        <testsuite name="enebe-nb/phergie-irc-plugin-react-tell test suite">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src/</directory>
        </whitelist>
    </filter>
</phpunit>
